# ==========================================
# Server Configuration
# ==========================================
API_PORT=3100

# Anthropic / Claude.ai
ANTHROPIC_API_KEY=your_api_key

# ==========================================
# Agent Manager Drive Configuration
# ==========================================
# URL of the Powerhouse drive where agents store their documents
# This drive contains inbox, WBS, and other agent documents
AGENT_MANAGER_DRIVE=http://localhost:4001/d/preview-10e97b52
# In production: http://switchboard.agent-mgr.domain.tld/d/agent-mgr-654ab3

# Write agent skills info to the drive on startup
WRITE_AGENTS_SKILLS_INFO=true

# ==========================================
# Projects Configuration
# ==========================================
# Base path for all agent-created projects (useful for PVC mounts in Kubernetes)
# If set, REACTOR_PACKAGES_PATH and FUSION_PROJECTS_PATH default to subdirectories
PROJECTS_BASE_PATH=/data/projects

# Override specific project paths (optional - defaults to PROJECTS_BASE_PATH subdirs)
# REACTOR_PACKAGES_PATH=/data/projects/reactor-packages
# FUSION_PROJECTS_PATH=/data/projects/fusion

# Fusion Next.js port
FUSION_NEXTJS_PORT=8000

# ==========================================
# ReactorPackageDevAgent Configuration
# ==========================================
# Agent name (displayed in logs and UI)
REACTOR_PACKAGES_DEV_NAME=Agent Rupert

# Document IDs for agent's work documents
# WBS (Work Breakdown Structure) document for tracking tasks
REACTOR_PACKAGES_DEV_WBS=329980ae-755d-47f2-a821-e0633443531a
# Inbox document for receiving new tasks
REACTOR_PACKAGES_DEV_INBOX=0eabf496-7e1e-4720-bf1a-d6ab05b6f772

# Vetra configuration for running Powerhouse projects
VETRA_CONNECT_PORT=5000
VETRA_SWITCHBOARD_PORT=6100
VETRA_STARTUP_TIMEOUT=90000

# ==========================================
# PowerhouseArchitectAgent Configuration
# ==========================================
# Agent name (displayed in logs and UI)
POWERHOUSE_ARCHITECT_NAME=Agent Pat

# Document IDs for agent's work documents
# WBS document for tracking architecture tasks
POWERHOUSE_ARCHITECT_WBS=
# Inbox document for receiving architecture requests
POWERHOUSE_ARCHITECT_INBOX=
